{% extends '././base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('log-form') }}
{% endblock %}

{% block title %}SnowTricks - Connexion{% endblock %}

{% block body %}
    <section id="container-form">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 box logForm">
                    <h1>Connexion</h1>
                    <section class="formulaire">
                        <form action="{{ path('log_in') }}" method="post">
                            <div class="form-group">
                                <label for="username">Nom d'utilisateur</label>
                                <input id="username" required name="_username" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input id="password" required name="_password" type="password" class="form-control">
                            </div>
                            <div class="from-group" id="submit-btn">
                                <button type="submit" class="btn btn-info">Valider</button>
                            </div>
                        </form>
                    </section>

                    <div class="metadata"><a href="{{ path('registration') }}">Créer un compte</a></div>
                    <div class="metadata"><a href="{{ path('forgot_password') }}">Mot de passe oublié ?</a></div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}

 {% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('log-form') }}
 {% endblock %}