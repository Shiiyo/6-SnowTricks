{% extends '././base.html.twig' %}
{% block title %}
    {% if editMode %}
        Modification du trick
    {% else %}
        Nouveau trick
    {% endif %}
{% endblock %}

{% block body %}
    {% if editMode %}
        <h2>Modification du trick</h2>
    {% else %}
        <h2>Nouveau trick</h2>
    {% endif %}

    <section class="formulaire">
        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.content) }}
            {{ form_row(form.trickGroup) }}
            {{ form_row(form.pictures) }}
            <a href="#" id="add_picture" class="btn btn-info">Ajouter une image</a>

            {% if editMode %}
                {{ form_row(form.submit, {'label': 'Modifier le trick'})}}
            {% else %}
                {{ form_row(form.submit, {'label': 'Nouveau trick'})}}
            {% endif %}
        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('multiplePicture') }}
{% endblock %}
